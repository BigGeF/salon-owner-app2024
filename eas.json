{
  "cli": {
    "version": ">= 12.0.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },

    "development-simulator": {
      "developmentClient": true,
      "distribution": "internal",
      "ios":{
        "simulator":true
      }
    },
    "preview": {
      "developmentClient": false,
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "developmentClient": false,
      "distribution": "store",
      "android": {
        "buildType": "apk"
      }
    },
    "simulator":{
    "ios": {
        "simulator": true
      }
    }
  },
  "submit": {
    "production": {}
  }
}
